<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Product" table="product">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="naam" type="string" column="naam" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="beschrijving" type="text" column="beschrijving" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="specificaties" type="text" column="specificaties" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="inkoopprijs" type="string" column="inkoopprijs" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="magazijnlocatieId" type="integer" column="magazijnlocatie_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="minvoorraad" type="integer" column="minVoorraad" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="voorraad" type="integer" column="voorraad" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="vervangendId" type="integer" column="vervangend_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
