{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<h1>Voorraad</h1>

	<div class="row">
<h2>Beneden bestelserie:</h2>
	<table class="table table-bordered table-striped table-hover">

		<thead>
		<td>ID</td>
		<td>Productnaam</td>
		<td>Inkoopprijs</td>
		<td>Min. Voorraad</td>
		<td>Huidig. Voorraad</td>
		<td>Bestelserie</td>
		</thead>
		<tbody>
        {% for product in producten %}
			{% if product.voorraad - product.minVoorraad < 0 %}
        		{% if product.status > 0 %}
			<tr>
				<td>{{ product.id }}</td>
				<td>{{ product.naam }}</td>
				<td>{{ product.inkoopprijs }}</td>
				<td>{{ product.minVoorraad }}</td>
				<td>{{ product.voorraad }}</td>
                {%  if product.voorraad - product.minVoorraad < 0 %}
					<td><a href="{{ path('verwijderproduct', {'id':product.id}) }}">Bestelserie: {{ product.minVoorraad - product.voorraad }}</a></td>
                {% else %}
					<td> </td>
                {% endif %}

			</tr>
        	{% endif %}
            {% endif %}
        {% endfor %}
		</tbody>
	</table>
</div>
	<div class="row">
	<h2>Volledige voorraad:</h2>
	<table class="table table-bordered table-striped table-hover">

<thead>
<td>ID</td>
<td>Productnaam</td>
<td>Inkoopprijs</td>
<td>Min. Voorraad</td>
<td>Huidig. Voorraad</td>
<td>Bestelserie</td>
</thead>
<tbody>
	{% for product in producten %}
		{% if product.status > 0 %}
			<tr>
				<td>{{ product.id }}</td>
			<td>{{ product.naam }}</td>
                <td>{{ product.inkoopprijs }}</td>
				<td>{{ product.minVoorraad }}</td>
				<td>{{ product.voorraad }}</td>
                {%  if product.voorraad - product.minVoorraad < 0 %}
                    <td><a href="{{ path('verwijderproduct', {'id':product.id}) }}">Bestelserie: {{ product.minVoorraad - product.voorraad }}</a></td>
                {% else %}
                <td> </td>
                {% endif %}

			</tr>
	{% endif %}
	{% endfor %}
</tbody>
	</table>
	</div>
</div>
{% endblock %}

