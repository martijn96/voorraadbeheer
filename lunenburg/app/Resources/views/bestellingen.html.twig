{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <br>
        <h1>Bestellingen</h1>
    </div>
    <br><br>
    <div class="row">
        <button><a href="{{ path('nieuwebestelopdracht') }}">Nieuwe bestelopdracht</a></button>
        <table class="table table-bordered table-striped table-hover">
        <thead>
                <td>Aantal bestele producten</td>
                <td>Productbarcode</td>
        </thead>
        <tbody>
        {% for bestelling in bestelregels %}
            <tr>
                <td>{{ bestelling.aantal }}</td>
                <td>{{ bestelling.productId }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>


{% endblock %}
